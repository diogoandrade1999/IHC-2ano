<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/app_bar_leagues_details"
    android:background="@color/colorSecondary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/flagView"
            android:layout_width="20dp"
            android:layout_height="18dp" />

        <TextView
            android:id="@+id/countryView"
            android:layout_width="100dp"
            android:layout_height="18dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="-18dp"
            android:textSize="12dp"
            android:textColor="@color/colorPrimaryDark"/>

        <Button
            android:layout_width="85dp"
            android:layout_height="18dp"
            android:layout_marginLeft="128dp"
            android:layout_marginTop="-18dp"
            android:text="2018"
            android:textSize="10dp"
            android:background="@color/colorButtonV"/>
        <Button
            android:layout_width="85dp"
            android:layout_height="18dp"
            android:layout_marginLeft="218dp"
            android:layout_marginTop="-18dp"
            android:text="2017"
            android:textSize="10dp"
            android:background="@color/colorButton"/>
        <Button
            android:layout_width="85dp"
            android:layout_height="18dp"
            android:layout_marginLeft="308dp"
            android:layout_marginTop="-18dp"
            android:text="2016"
            android:textSize="10dp"
            android:background="@color/colorButton"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/colorWhite"/>

        <TextView
            android:id="@+id/nameView"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="-50dp"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="gone"/>

        <Button
            android:id="@+id/classificationButton"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="-49dp"
            android:text="Classification"
            android:textSize="10dp"
            android:background="@color/colorButtonV"/>
        <Button
            android:id="@+id/resultsButton"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="-50dp"
            android:text="Results"
            android:textSize="10dp"
            android:background="@color/colorButton"/>
        <Button
            android:id="@+id/gamesButton"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="-50dp"
            android:text="Games"
            android:textSize="10dp"
            android:background="@color/colorButton"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/classificationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:visibility="visible">

        <TextView
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:text="#"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="195dp"
            android:layout_height="25dp"
            android:text="TEAM"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:text="PJ"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:text="G"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:text="P"
            android:textColor="@color/colorPrimaryDark"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="-400dp"
            tools:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/items_leagues_details" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/resultsView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:visibility="gone">

        <TextView
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:text="Date"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="25dp"
            android:text="HOME TEAM"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="25dp"
            android:text="AWAY TEAM"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:text="SCORE"
            android:textColor="@color/colorPrimaryDark"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewRes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="-405dp"
            tools:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/items_leagues_details_results" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gamesView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:visibility="gone">

        <TextView
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:text="Date"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="25dp"
            android:text="HOME TEAM"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="25dp"
            android:text="AWAY TEAM"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/textScore"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:textColor="@color/colorPrimaryDark"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewGames"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="-405dp"
            tools:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/items_leagues_details_results" />
    </LinearLayout>
</RelativeLayout>